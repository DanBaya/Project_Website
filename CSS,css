/* Navigation Styles */
nav ul {
    list-style: none; /* Removes bullet points from list items */
    padding: 0;
    text-align: center;
}

nav ul li {
    display: inline; /* Displays list items horizontally */
    margin-right: 20px;
}

nav ul li a {
    color: #fff;
    text-decoration: none; /* Removes underline from links */
}

nav ul li a:hover {
    text-decoration: underline; /* Adds underline on hover */
}

/* Main Content Styles */
main {
    padding: 20px;
    max-width: 960px; /* Limits content width */
